{
  "compilerOptions": {
    "outDir": "./lib/",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": false,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "allowJs": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    ".git",
    "tslint.json",
    ".vscode"
  ]
}